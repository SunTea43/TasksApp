    <div class='row'>
        <div class='col-md-12'>
            <h1>Tareas</h1> 
        </div>
        
    </div>
    <div class='row'>
        <div class='col-md-8'>
            <h3>Módulo de tareas</h3>
        </div>
        <div class='col-md-2'>
            <a class='btn btn-primary' href='/tasks/new'>Crear tarea</a>
        </div>
        <div class='col-md-2'>
            <a class='btn btn-primary' href='/tasks.xlsx'>Descargar tareas</a>
        </div>
    </div>
</div>
    <div class='row'>
        <%= render 'search'%>
    </div>
    <div class='row'>
        <div class='col-md-12'>
            <table class='table table-striped'>
                <thead>
                    <tr>
                        <th>Título</th>
                        <th>Descripción</th>
                        <th>Prioridad</th>
                        <th>Estado</th>
                        <th>Creación</th>
                        <th>Última edición</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <% @tasks.each do |task| %>
                        <tr>
                            <td><%= task.name %></td>
                            <td><%= task.description %></td>
                            <td><%= (task.priority==1)? 'Alta':(task.priority==2)? 'Media': 'Baja' %></td>
                            <td><%= (task.status==1)? 'Tarea por hacer': (task.priority==2)? 'Tarea en curso': 'Tarea terminada' %></td>
                            <td><%= task.created_at%></td>
                            <td><%= task.updated_at%></td>
                            <td>
                                <%= link_to 'Editar',edit_task_path(task), class: 'btn btn-primary' %>
                                <%= link_to 'Eliminar',task, data: {
                                    turbo_method: :delete,
                                    turbo_confirm: '¿Está seguro de borrar la tarea #{task.name}?',
                                    id: task.id,
                                }, class: 'btn btn-danger' %>
                            </td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>



